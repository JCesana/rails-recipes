<div class="main_content">

  <div id="recipe_top" class="columns">
    <div class="column is-one-third">
      <figure class="recipe_image image is-1by1">
        <%= image_tag @recipe.image %>
      </figure>

    </div>
    <div class="column is-two-thirds">
      <div id="recipe_info">
        <h1><%= @recipe.title %></h1>
        <p class="description"><%= @recipe.description %></p>
        <p>Submitted by <%= @recipe.user.email %></p>

        <% if current_user %>
          <div id="comment_pane">
            <% @comments.each do |comment| %>
              <%= render 'comments/comment', comment: comment %>
            <% end %>
          </div>
          <%= form_with model: [@recipe, @comment] do |f| %>
            <%= f.text_field :body %>
            <%= f.submit "Comment" %>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>

  <div class="columns">
    <div class="column is-half">
      <div id="ingredients-styling">
        <p class="title">Ingredients</p>
        <ul>
          <% @recipe.recipe_ingredients.each do |ri| %>
            <li><%= ri.recipe_line_detail %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="column is-half">
      <div id="directions-styling">
        <p class="title">Directions</p>
        <ol>
          <% @recipe.directions.each do |direction| %>
            <li>
              <%= direction.step %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", root_path, class: "btn btn-default" %>
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-default" %>
        <%= link_to "Delete", recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>

</div>
