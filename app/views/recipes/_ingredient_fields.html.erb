<div class="nested-fields field">
  <div class="field has-addons">
    <div class="control">
      <%= link_to_remove_association f, class: 'button is-info is-light' do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
    <div class="control">
      <%= f.text_field :name, class: 'input', placeholder: 'Ingredient Name' %>

      <div id="recipe_ingredients">
        <%= f.fields_for :recipe_ingredients do |recipe_ingredient| %>
          <%= render 'recipe_ingredients', :f => recipe_ingredient %>
        <% end %>
      </div>
  </div>
</div>
