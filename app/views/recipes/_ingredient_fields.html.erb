<div class="nested-fields field">
  <div class="field has-addons">
    <div class="control">
      <%= link_to_remove_association f, class: 'button is-info is-light' do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
    <div class="control">
      <%= f.text_field :name, class: 'input', placeholder: 'Ingredient Name' %>
      <%= f.text_field :name, class: 'quantity', placeholder: 'Quantity' %>
      <%= f.text_field :name, class: 'unit', placeholder: 'Unit' %>
    </div>
  </div>
</div>
