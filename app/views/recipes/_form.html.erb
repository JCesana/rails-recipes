<%= form_for @recipe do |f| %>
  <%= render 'errors' %>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="field">
          <div class="control">
            <%= f.text_field :title, class: 'input is-large', placeholder: "Recipe Title" %><br /><br />
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.text_area :description, class: 'textarea', rows: 4, placeholder: "Recipe description..." %><br /><br />
          </div>
        </div>
        <div class="field">
          <div class="control">
            <div class="file">
              <label class="file-label">
                <%= f.file_field :image %>
              </label>
            </div>

          </div>
        </div>

      </div>
    </div>

<div class="panel-body">

    <div class="row">
      <div class="column">
        <h3>Ingredients</h3>
          <%= f.fields_for :recipe_ingredients do |ri| %>
            <%= ri.text_field :quantity, placeholder: "Qty" %>
            <%= ri.text_field :unit, placeholder: "Unit" %>

            <%= ri.fields_for :ingredient do |i| %>
              <%= i.text_field :name, placeholder: "Ingredient" %><br />
            <% end %>
          <% end %>
      </div>
      <div class="column">
        <h3>Directions</h3>
          <%= f.fields_for :directions do |d| %>
            <%= d.text_area :step, placeholder: "Directions Step" %>
          <% end %>
      </div>
    </div>

  <%= f.button "Submit", class: "button is-primary", :disable_with => 'Please wait ...' %>
<% end %>
